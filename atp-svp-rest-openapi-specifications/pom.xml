    <modelVersion>4.0.0</modelVersion>
    <artifactId>atp-svp-rest-openapi-specifications</artifactId>

    <packaging>jar</packaging>
    
    <build>
        <resources>
            <resource>
                <targetPath>api/svp</targetPath> 
